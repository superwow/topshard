{
    "name": "topshard/app",
    "description": "TopShard server rankings built with CodeIgniter 4",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "codeigniter4/framework": "^4.5"
    },
    "require-dev": {
        "fakerphp/faker": "^1.22",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.5",
        "codeigniter4/devkit": "^1.5"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@composer dump-autoload"
        ],
        "post-install-cmd": [
            "@composer dump-autoload"
        ],
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "codeigniter4/framework": true
        },
        "http-timeout": 60
    }
}
